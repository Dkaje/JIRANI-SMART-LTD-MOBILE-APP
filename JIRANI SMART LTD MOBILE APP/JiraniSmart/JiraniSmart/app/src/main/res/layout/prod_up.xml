<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/circleView"
                android:layout_width="match_parent"
                android:layout_height="187dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:visibility="gone"
                android:background="#9C5B71"
                android:scaleType="fitXY" />

            <Spinner
                android:id="@+id/spnLoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circleView"
                android:layout_marginTop="10dp"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spnType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spnLoan"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/worth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spnType"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:hint="Estimated value"
                android:inputType="numberDecimal"
                android:maxLength="8"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/existence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/worth"
                android:layout_gravity="left"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:hint="Existence in terms of years"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/existence"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:background="#BCB7B7"
                android:text="Upload"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>